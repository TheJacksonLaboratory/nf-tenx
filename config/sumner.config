params {
    config_profile_description = 'The Jackson Laboratory Sumner HPC profile provided by nf-core/configs.'
    config_profile_contact = 'Bill Flynn (@flynnb)'
    config_profile_url = 'https://jacksonlaboratory.sharepoint.com/sites/ResearchIT/SitePages/Welcome-to-Sumner.aspx'
    singularity_cache_dir = '/fastscratch/singularity_cache_nfcore'
}

params {
    max_memory = 320.GB
    max_cpus = 32
    max_time = 336.h
    time_scale_factor = 2
}

env {
    NXF_WORK = '/fastscratch/singlecellcore/'
    NXF_SINGULARITY_CAHCEDIR = '/fastscratch/singlecellcore/'
}

singularity {
    process.module = 'singularity'
    enabled = true
    autoMounts = true
    runOptions = '-B /projects,/fastscratch,/gpfs'
}

process {
    executor = 'slurm'
    queue = 'compute'
    clusterOptions = {task.time < 72.h ? '-q batch' : '-q long'}
    module = 'slurm'
}

process {
    cpus = 1
    memory = '8 GB'
    errorStrategy = 'retry'
    maxRetries = 3

    withLabel: '10x_genomics_count' { cpus = 16; memory = '96 GB' }
    withLabel: '10x_genomics_other' { cpus = 16; memory = '96 GB' }
    withLabel: 'alternative_count' { cpus = 4; memory = '96 GB' }
    withLabel: 'high_mem' { memory = '168 GB' }
}

executor {
    $slurm {
        queueSize = 250
        submitRateLimit = '1 / 2 s'
    }
    $local {
        memory = '2 GB'
    }
}
